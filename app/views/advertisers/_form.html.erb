<%= form_for @advertiser, :html => { :class => 'advertiser' } do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :website %><br />
    <%= f.url_field :website %>
  </p>
  <p>
    <%= f.label :starts %><br />
    <%= f.date_select :starts %>
  </p>
  <p>
    <%= f.label :ends %><br />
    <%= f.date_select :ends %>
  </p>
  <p>
    <%= f.check_box :paid %> <%= f.label :paid %>
  </p>
  <p><%= f.submit %></p>
<% end %>
